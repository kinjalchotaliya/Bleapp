<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="ttl-text title-font text-center mrg-btm20"> Edit Bleapp</h2>
    </div>
  </div>
  <div class="row">
    <div class="popup-form">
      <%#=raise @bleapp.inspect%>
    <%= form_for(@bleapp, :url => admin_bleapp_path,method: :patch,:html => {:id => "bleapp_edit_form",:name => "bleapp_edit_form"}) do |f|%>
    <div class="col-md-6 col-md-push-3">
      <div class="form-group">
        <label for="Name" class="control-label">Title</label>
          <%= f.text_field :title,:id => "title",:class => "form-control", :placeholder => "Enter Title"%>
      </div>
      <div class="form-group">
          <label for="Name" class="control-label">Category</label>
            <%= f.select :tags,options_for_select(['WildCard','Home','Kitchen','Living Room','Bedroom','Bathroom'],@bleapp.tags),{:prompt => "Select Any"},{:class => "form-control"}%>
        </div>
      <div class="form-group">
        <label for="Name" class="control-label">Description</label>
          <%= f.text_area :description,:id => "city",:class => "form-control", :placeholder => "Enter Description"%>
      </div>
    <div class="clearfix"></div>
    <div class="col-md-6 col-md-push-3">
      <%= f.submit "Update",:id => "submit_button",:class => "btn btn-popup title-font btn-lg btn-block", data: { disable_with: "Processing..." }%>
    </div>
    <div class="clearfix"></div>
    <div class="col-md-6 col-md-push-3">
      <%= link_to 'Cancel',:back , class:"btn btn-default title-font btn-lg btn-block"%>
    </div>

    <% end %>
   </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $("form").bootstrapValidator({
      message : "This value is not valid",
      feedbackIcons : {
        valid : "glyphicon glyphicon-ok error_icon_position",
        invalid : "glyphicon glyphicon-remove error_icon_position",
        validating : "glyphicon glyphicon-refresh error_icon_position"
      },
      fields : {
        "bleeapp[title]" : {
          validators: {
            notEmpty : {
              message : "Title is required."
            }
          }
        },
        "bleeapp[tags]" : {
          validators: {
            notEmpty : {
              message : "Tags is required."
            }
          }
        }
      }
    });
  });
</script>
