
<div class="row">
	<div class="col-md-12 animated-panel zoomIn" style="animation-delay: 0.1s;">
    <div class="hpanel">
      <div class="panel-heading">
        <div class="panel-tools">
          <a class="showhide"><i class="fa fa-chevron-up"></i></a>
          <a class="closebox"><i class="fa fa-times"></i></a>
        </div>
        <h5>Bleapp Images</h5>
        <%#=link_to "Add Image","#",class:"btn btn-primary"%>
      </div>

      <div class="panel-body" style="display: block;">
        <div class="table-responsive">
          <table cellpadding="1" cellspacing="1" class="table table-bordered table-striped">
            <tbody>
              <tr>
                <td>
                  <%= form_for(@bleapp, :url => add_more_image_admin_bleapp_path(params[:id]),method: :post,:html => {:id => "bleapp_add_images",:name => "bleapp_add_images",:multipart => true}) do |f|%>
                    <div class="form-group">
                      <div class="col-md-4">
                        <label for="Logo">Add more Images</label>
                        <%=file_field_tag 'file[]', :accept => 'image/*',:class => "btn btn-primary", :multiple => true, required: true%>
                      </div>
                      <div class="col-md-3">
                        <label for="Logo">&nbsp;</label>
                        <%= submit_tag "Upload",:id => "submit_button",:class => "btn btn-popup title-font btn-lg btn-block", data: { disable_with: "Processing..." },style:"margin-bottom: 10px;"%>
                      </div>
                    </div>
                  <%end%>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="panel-body" style="display: block;">
        <div class="table-responsive">
          <table cellpadding="1" cellspacing="1" class="table table-bordered table-striped">
            <tbody>
              <%if @bleapp.ble_images.present?%>
                <tr>
                  <%i=0%>
           				<% @bleapp.ble_images.each do |image| %>
                    <%i=i+1%>
           					<td>
           						<%= image_tag image.image.url, size: "160x100" if image.image.file? %><br/>
                      <%= link_to "Delete Image", admin_delete_image_path(id: image.id), method: :post, data: { confirm: 'Are you sure?' }%>
           					</td>
                    <%if i > 4 %>
                      </tr>
                      <br/>
                      <tr>
                      <%i = 0%>
                    <%end%>
           				<%end%>
                </tr>
              <%else%>
                <tr><td> No image Availble..!</td></tr>
              <%end%>
            </tbody>
          </table>
            <%= link_to 'Cancel',:back , class:"btn btn-default title-font btn-lg btn-block",style: "margin-bottom: 10%; margin-top: 2%;",data: { no_turbolink: true }%>
        </div>
      </div>
    </div>
  </div>
</div>
