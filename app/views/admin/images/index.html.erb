<div class="row">
	<div class="col-md-12 animated-panel zoomIn" style="animation-delay: 0.1s;">
    <div class="hpanel">
      <div class="panel-heading">
        <div class="panel-tools">
          <a class="showhide"><i class="fa fa-chevron-up"></i></a>
          <a class="closebox"><i class="fa fa-times"></i></a>
        </div>
         <%= link_to "Add Images",new_admin_image_path(id:@property.id), class: "btn btn-primary"%>
        <h5>Property Images</h5>
      </div>
      <div class="panel-body" style="display: block;">
        <div class="table-responsive">
          <table cellpadding="1" cellspacing="1" class="table table-bordered table-striped">
            <tbody>
              <%if @images.present?%>
                <tr>
                  <%i=0%>
           				<% @images.each do |image| %>
                    <%i=i+1%>
           					<td>
           						<%= image_tag image.image.url, size: "160x100" if image.image.file? %><br/>
                      <%= link_to "Change Image", edit_admin_image_path(id: image.id) %> <%= link_to "Delete Image", admin_image_path(image.id), method: :delete, data: { confirm: 'Are you sure?' }%>
           					</td>
                    <%if i > 4 %>
                      </tr>
                      <br/>
                      <tr>
                      <%i = 0%>
                    <%end%>
           				<%end%>
                </tr>
              <%else%>
                <tr><td> No image Availble..!</td></tr>
              <%end%>  
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>  
</div>