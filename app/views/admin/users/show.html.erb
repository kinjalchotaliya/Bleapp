<div class="content animate-panel">
	<div class="row">
  	<div class="col-lg-12 animated-panel zoomIn" style="animation-delay: 0.1s;">
      <div class="hpanel">
        <div class="panel-heading">
        </div>
        <div class="panel-body" style="display: block;">
          <div class="table-responsive">
            <table cellpadding="1" cellspacing="1" class="table table-bordered table-striped" id="admin_list_table">
              <thead>
                <tr>
           				<th> First Name </th>
									<th> Last Name </th>
									<th> Cell Phone</th>
									<th> Email</th>
									<%if @user.role == "USER"%>
										<th> Contact Via Email </th>
										<th> Contact Via SMS </th>
										<th> Work with Agent</th>
									<%elsif @user.role == "AGENT"%>
										<th> Office Phone </th>
										<th> Associated Agency </th>
										<th> License Number</th>
									<%end%>	
									<th id="col_header1"> <center>Action</center></th>
                  <th class="hide_dt_column"> <center>Action</center></th>
                </tr>
              </thead>
              <tbody>
								<tr>
									<td><%= @user.f_name%></td>
									<td><%= @user.l_name%></td>
									<td><%= @user.cell_phone%></td>
									<td><%= @user.email%></td>
									<%if @user.role == "USER"%>
										<%if @user.user_setting.present? %>
											<td>
												<%if @user.user_setting.contact_by_email == true%>
													Yes
												<%else%>
													No
												<%end%>
											</td>
											<td>
												<%if @user.user_setting.contact_by_sms == true%>
													Yes
												<%else%>
													No
												<%end%>
											</td>
											<td>
												<%if @user.user_setting.work_with_agent == true%>
													Yes
												<%else%>
													No
												<%end%>
											</td>
										<%else%>
											<td></td>
										<%end%>
									<%elsif @user.role == "AGENT"%>	
										<%if @user.agent_info %>
											<td><%= @user.agent_info.office_phone %></td>
											<td><%= @user.agent_info.asso_agency %></td>
											<td><%= @user.agent_info.license_no %></td>
										<%else%>
											<td></td>
											<td></td>
											<td></td>		
										<%end%>
									<%end%>	
									<td><%= link_to "Edit", edit_admin_user_path(id: @user.id)%></td>
									<td><%= link_to "Delete", admin_user_path(id: @user.id), method: :delete, data: { confirm: 'Are you sure?' }%></td>
								</tr>
              </tbody>
            </table>
          </div>
        </div>
        <div class="panel-footer" style="display: block;">
        	<div class="apple_pagination">
				  </div>
        </div>
      </div>
  	</div>
	</div>
</div>